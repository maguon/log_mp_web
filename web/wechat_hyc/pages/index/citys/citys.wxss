 /* <!-- 城市列表 ---------------------------------------------------------------------- --> */
.city-item-content {
 display: flex;
 flex-direction: column;
 justify-content: center;
 margin-top: 110rpx;
 background-color: #FFFFFF;
}
 
.city-item {
 background: #fff;
 /* margin-top: 5rpx; */
