page {
  background: white;
}

.content {
  width: 100%;
  height: 120px;
  display: flex;
  flex-direction: column;
  border-bottom: 2px solid #e2e2e2;
}

.head {
  height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #f8f6f8;
}

.num {
  margin-left: 10px;
  font-size: 12px;
  color: #b9b9b9;
}

.state {
  font-size: 12px;
  color: #cf64cf;
  margin-right: 10px;
}

.item {
  width: 90%;
  height: 90px;
  background: white;
   margin-left: 20px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.image{
  width: 80px;
  height: 80px;
}
.item-img {
    width: 80px;
  height: 80px;
  margin-left: 10px;
  background: #dcddde;
}


.text-title {
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  color: #8a8a8a;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.price {
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.original {
  font-size: 12px;
  color: #b9b9b9;
}

.special {
  font-size: 12px;
  color: #d43286;
}

.pay-content {
  height: 30px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.pay {
  height: 15px;
  width: 50px;
  background: #713e78;
  align-items: center;
  border-radius: 5px;
   margin-right: 20px;
}

.pay-text {
  font-size: 10px;
  color: white;
  text-align: center;
}

.address {
  width: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.iphone {
  font-size: 12px;
  color: #b9b9b9;
  margin-left: 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.add-img {
  width: 15px;
  height: 15px;
}


