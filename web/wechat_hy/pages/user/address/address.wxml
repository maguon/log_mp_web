
<view class="wraper">

<view class="listItems">
<text class="listLeft">收车人</text>
<input class="listRight" type="text" bindinput='addName' placeholder='{{name}}'  name="consignee"/>
</view>

<view class="listItems">
<text class="listLeft">手机号</text>
<input class="listRight" type="number" bindinput='userPhone' placeholder='{{phone}}'  name="mobile"/>
</view>
<text class="text">收货地址</text>
<view class="item">
<text class="listLeft"></text>
<textarea  class="textarea" type="text" bindinput='addRess' placeholder='{{address}}'  name="address"> </textarea>
</view>

<view class="btnGroup">
 <button bindtap='saveAddress' class="btn" hover-class="weui-cell_active">{{add}}</button>
</view>
</view>

