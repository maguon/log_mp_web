page{
background: #f8f6f8;
}
.head{
  width: 100%;
  height: 120px;
  background: #7a387a;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.back-portrait{
  width: 80px;
  height: 80px;
  margin-left: 20px;
  border-radius: 50%;
  background: #b794b7;
}
.portrait{
  width: 60px;
  height: 60px;
  margin-top: 10px;
  margin-left: 10px;
}
.content{
height: 50px;
 display: flex;
 flex-direction: row;
 align-items: center;
}
.content-name{
font-size: 18px;
color: white;
margin-left: 20px;
}
.content-img{
 width: 20px;
  height: 18px;
  margin-left: 20px;
}
.content-right{
  font-size: 12px;
  color: #c4b4c4;
  position: absolute;
  right: 15px;
}
 .content-phone{
   font-size: 12px;
   color: #c4b4c4;
   margin-left: 10px;
 }
 .right{
   display: flex;
   flex-direction: column;
 }
 .content-band{
 height: 15px;
 width: 50px;
 text-align: center;
line-height: 15px;
 font-size: 10px;
 color: #c4b4c4;
 border: 1px solid #c4b4c4;
 border-radius: 4px 4px 4px 4px;
 position: absolute;
 right: 15px;
 }

 /* <!-- ---------------------------------------------------------------------- --> */
.items{
width: 100%;
height: 50px;
display: flex;
flex-direction: row;
align-items: center;
background: white;
border-bottom: 1px solid #e6e3e3;
}
.item-text{
 font-size: 15px;
 color: #8a8a8a;
 margin-left: 15px;
}
.item-img{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 5px;
}
.weui-cell_active{
  background-color:#ececec;
  }
.period{
height: 10px;
width: 100%;
border-bottom: 1px solid #e6e3e3;
}