/* <!-- 选择列表 ---------------------------------------------------------------------- --> */
.weui-cell_access{
  background: white;
}

.content{
  margin-top: 5px;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  }
.weui-cell__bd{
  width: 30%;
  height: 40px;
  line-height: 40px;
  padding-left: 15px;
  font-size: 15px;
  color: #b8b8b8;
}
.weui-cell__bd01{
  width: 30%;
  height: 40px;
  line-height: 40px;
  padding-left: 15px;
  font-size: 15px;
}
.left-img{
  width: 22px;
  height: 20px;
  margin-left: 15px;
}
.arrow{
  height: 20px;
  width: 20px;
  position: absolute;
  right: 0px;
}

/* <!-- 按钮 ---------------------------------------------------------------------- --> */


.btn-area{
 margin-top: 30px;
  height: 45px;
  width: 90%;
  background: #7a387a;
  color: white;
}
button[disabled]{
  background: #c4c2c2 !important;
  color:white !important;
}
.area{
margin-top: 10px;
  background: white;
  border: 1px solid #7a387a;
  color: #7a387a;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.customer{
  height: 25px;
  width: 35px;
  padding-top: 5px;
  margin-right: 15px;
}

.weui-cell_active{
  background-color:#ececec;
  }
/* <!-- 车辆估值 ---------------------------------------------------------------------- --> */
.valuation{
  height: 50px;
  width: 100%;
  background: white;
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.valuation-item{
   display: flex;
  flex-direction: row;
  align-items: center;
  width: 75%;
}
.valuation-text{
  width: 50%;
  font-size: 15px;
  margin-left: 10px;
}
.input{
  width: 50%;
  text-align: right;
  font-size: 15px;
  position: absolute;
  right: 85px;
  color:  #494646;
}
.weui-check__hd_in-checkbox{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 70px;
  height: 50px;
  border-left: 1px solid gainsboro;
  position: absolute;
  right: 10px;
}
.right-text{
margin-left: 5px;
font-size: 15px;
}
