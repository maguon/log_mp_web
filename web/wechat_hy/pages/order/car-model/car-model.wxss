page{
  background: #f8f6f8;
}
.dis-head{
  width: 100%; 
  height: 60px;
  background: white;
  margin-top: 3px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.dis-line{
  width: 100%;
  height: 2px;
  background: #ebe9eb;
}

.head-city{
  font-size: 18px;
  margin-left: 15px;
  color: #7a387a;
}
.head-staycar{
  margin-left: 15px;
  width: 20px;
  height: 10px;
  font-weight: bolder;
}
.head-customer{
  width: 28px;
  height: 20px;
  position: absolute;
  right: 20px;
}
/* ---------------------------------------------------------------------- */
.dis-way{
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
}
.way-image{
  width: 25px;
  height: 18px;
  margin-left: 15px;
  margin-right: 15px;
}
.way-text{
  font-size: 15px;
  margin-left: 15px;
}
.way-right{
  position: absolute;
  right: 30px;
  font-size: 15px;
  color: #8a8a8a;
}
.arrow{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 2px;
}
.active{
background-color:#ececec;
}
/* ---------------------------------------------------------------------- */
.note{
  width: 100%;
  height: 50px;
  background: white;
  display: flex;
  align-items: center;
}
.note-text{
  font-size: 15px;
  margin-left: 15px;
}
.note-input{
  font-size: 15px;
  color: #8a8a8a;
  text-align: right;
  position: absolute;
  right: 30px;
}

/* <!-- 车辆估值 ---------------------------------------------------------------------- --> */
.valuation{
  height: 50px;
  width: 100%;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.valuation-item{
   display: flex;
  flex-direction: row;
  align-items: center;
  width: 75%;
}
.valuation-text{
  width: 50%;
  font-size: 15px;
  margin-left: 10px;
}
.input{
  width: 50%;
  text-align: right;
  font-size: 15px;
  position: absolute;
  right: 85px;
  color:  #494646;
}
.weui-check__hd_in-checkbox{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 70px;
  height: 50px;
  border-left: 1px solid gainsboro;
  position: fixed;
  right: 10px;
}
.right-text{
margin-left: 5px;
font-size: 15px;
}
/* <!-- ---------------------------------------------------------------------- --> */

.btn-area{
  position: fixed;
  left: 1%;
  right: 1%;
  bottom: 20px;
  height: 45px;
  width: 90%;
  background: #7a387a;
  color: white;
}
.area{
  position: fixed;
  bottom: 20px;
  background: white;
  border: 1px solid #f00e46;
  color: #f34d69;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.button{
  position: fixed;
  left: 1%;
  right: 1%;
  bottom: 80px;
}
.weui-cell_active{
  background-color:#ececec;
  }

