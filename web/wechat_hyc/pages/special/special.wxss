page {
  background: #f8f6f8;
}

.item {
  height: 100px;
  width: 100%;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 2px;
}

.item-img {
  width: 100px;
  height: 80px;
  margin-left: 10px;
  background: #dcddde;
}

.flag {
  width: 90px;
  height: 20px;
  background: #bd8edd;
  margin-top: -75px;
  margin-left: 35px;
  transform: rotate(45deg);

}

.sold {
  background: #8c8c8c;
}

.flag-text {
  position: absolute;
  top: 2px;
  right: 28px;
  font-size: 10px;
  color: white;
}

.text {
  width: 70%;
  height: 100px;
  margin-left: 10px;
  display: flex;
  flex-flow: row wrap;
  align-content: space-between;
}

.text-title {
  margin-top: 10px;
  font-size: 15px;
  color: #8a8a8a;
}

.price {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
}

.original {
  font-size: 12px;
  color: #c3c4c5;
}

.special {
  font-size: 15px;
  color: #d43286;
  margin-right: 10px;
}
