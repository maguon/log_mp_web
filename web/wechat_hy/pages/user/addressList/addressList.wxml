<scroll-view class="scroll" scroll-y="true">

<view  hidden='{{hidden}}'>


<label  wx:for="{{addressList}}" wx:key='u'>
<view bindtap="radioChange" data-index="{{index}}" class="label" hover-class='weui-cell_active_btn'>
     <view class="product">
         <view class='default'>
<icon class="weui-icon-checkbox_circle" type="circle" size="18" wx:if="{{!item.status}}"></icon>
<icon class="weui-icon-checkbox_success" type="success" size="18" wx:if="{{item.status}}"></icon>
             <view hidden='{{!item.status}}' class='default-item'>默认</view>
             <view hidden='{{item.status}}' class='default-item-two'>设为默认</view>
         </view>

         <view class="ui-list-item-address">{{item.detail_address}}
               <text decode="{{true}}" space="{{true}}">&nbsp;</text> {{item.user_name}}
               <text decode="{{true}}" space="{{true}}">&nbsp;</text> {{item.phone}}
          </view>

           <view class='check'>
            <view class='default-redact'data-id="{{index}}" bindtap="editorAddress">编辑</view>
             <view class="default-redact" data-id="{{index}}" bindtap="delAddress">删除</view>
          </view>
     </view>
  </view>
  </label>


</view>


<view class="add-address" bindtap="addAddress" hover-class="weui-cell_active">
  <image class="add-img"  src="../../../images/add.png"></image>添加收货地址
</view>

<view class="btnGroup">
 <button bindtap='useRess' class="btn" hover-class="weui-cell_active_btn">确定</button>
</view>

</scroll-view>