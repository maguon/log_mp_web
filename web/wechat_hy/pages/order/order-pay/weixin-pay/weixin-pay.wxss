page{
   background: #efeff4;
}
.content{
height: 170px;
width: 90%;
background: white;
margin-top: 10px;
position: fixed;
left: 5%;
right: 5%;
}
.head{
  height: 50px;
  display: flex;
  flex-direction: row;
  margin: 10px 10px 10px 10px;
  font-size: 15px;
}
.head-name{
  color: #8a8a8a;
  font-size: 12px;
}
.head-pay{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.head-image{
  height: 50px;
  width: 50px;
  position: absolute;
  right: 5px;
}
.div-line{
  border: 1px solid #efeff4;
  margin-left: 10px;
  margin-right: 10px;
}
.center{
  height: 70px;
}

.center-pay{
  margin: 10px 10px 10px 10px;
  display: flex;
  flex-direction: row;
  font-size: 15px;
  color: #8a8a8a;
}
.center-text{
  color: #8a8a8a;
  margin-left: 10px;
  margin-top: 10px;
  font-size: 12px;
}
.center-image{
  height: 20px;
  width: 20px;
  color: black;
  position: relative;
  bottom: -5px;
}
.center-input{
  height: 20px;
  width: 100%;
  font-size: 25px;
  color: black;
  margin-left: 10px;
}

.weui-btn{
  height: 40px;
  width: 90%;
  font-size: 15px;
  margin-top: 20px;
}
.add-msg{
text-align: center;
margin-top: 10px;
color: #8a8a8a;
font-size: 15px;
}