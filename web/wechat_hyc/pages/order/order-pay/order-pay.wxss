  color:white;
  background: #7a387a;
}
.cancel{
  width: 50%;
  font-size: 18px;
  color: #d43286;
  z-index:1000000;
}
.submit{
  width: 50%;
  font-size: 18px;
  color:white;
  background: #7a387a;
}

button[disabled]{
  background-color: #aaa5a5 !important; 
}
.cancel_btn{
  background-color: #aaa5a5;
}


.bottom{
