.header {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.bg-img {
  width: 100%;
}

.bg-text {
  margin-top: 10px;
  font-size: 15px;
  color: #b27eb6;
}

.text {
  margin-bottom: 20px;
  font-size: 12px;
  color: #c4c2c4;
}

.bottom {
  width: 60%;
  border-radius: 80rpx;
  margin: 40rpx 50rpx;
  font-size: 35rpx;
  background: linear-gradient(-90deg, #823a94, #823a94);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
